# Meqenet.et Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://meqenet:password@localhost:5432/meqenet_dev
REDIS_URL=redis://localhost:6379

# =============================================================================
# JWT SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_ISSUER=meqenet.et
JWT_AUDIENCE=meqenet-api

# =============================================================================
# ENCRYPTION CONFIGURATION
# =============================================================================
ENCRYPTION_KEY=your-256-bit-encryption-key-here

# =============================================================================
# EXTERNAL API SERVICES
# =============================================================================

# Ethiopian Government Services
FAYDA_API_URL=https://staging-api.fayda.gov.et
FAYDA_API_KEY=your-fayda-api-key-here
NBE_API_URL=https://api.nbe.gov.et/
NBE_API_KEY=your-nbe-api-key-here

# Payment Services
TELEBIRR_API_URL=https://sandbox.telebirr.et
TELEBIRR_MERCHANT_ID=your-telebirr-merchant-id
TELEBIRR_API_KEY=your-telebirr-api-key

# =============================================================================
# CLOUD INFRASTRUCTURE
# =============================================================================
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_BUCKET=meqenet-dev-uploads

# =============================================================================
# COMMUNICATION SERVICES
# =============================================================================

# Email Service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Service
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Notification Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/TEAMS/WEBHOOK

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ML_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_MONITORING=true
