# Enhanced pnpm resilience for fintech production environments
fetch-retries=10
fetch-retry-maxtimeout=300000
fetch-timeout=300000
fetch-retry-mintimeout=10000

# Conservative network settings for stability (pnpm-compatible keys)
# Note: remove npm-only keys to silence warnings
# network-concurrency (npm) → prefer-offline/worker-concurrency not required for pnpm
# registry-timeout (npm) → use fetch-timeout above

# Additional resilience settings
prefer-offline=false
strict-peer-dependencies=false

# Hoisting rules
public-hoist-pattern[]=*next*
public-hoist-pattern[]=@swc/*

# Other settings
node-linker=hoisted
shell-emulator=true
auto-install-peers=true
