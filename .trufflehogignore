# TruffleHog exclude rules (RE2 regex)
# Exclude vendor/deps and generated artifacts
(^|/)node_modules(/|$)
(^|/)\.git(/|$)
(^|/)\.pnpm-store(/|$)
(^|/)dist(/|$)
(^|/)build(/|$)
(^|/)coverage(/|$)
(^|/)\.cache(/|$)
(^|/)\.vite(/|$)
(^|/)\.eslintcache$
(^|/)\.nx(/|$)
(^|/)\.ignored_prisma(/|$)
(^|/)\.scannerwork(/|$)
(^|/)\.DS_Store$
\.lock$
(^|/)pnpm-lock\.yaml$
(^|/)yarn\.lock$
(^|/)package-lock\.json$
(^|/)bom\.json$
(^|/)trufflehog_report\.json$

# Exclude binary/media files
\.(png|jpg|jpeg|gif|webp|svg|ico|woff|woff2)$

# Exclude certificates and keys (legitimate security files)
(^|/)secrets(/|$)
\.pem$
\.key$
\.crt$
\.cer$
\.p12$
\.pfx$

# Exclude configuration files that may contain random-looking strings
(^|/)android(/|$)
(^|/)ios(/|$)
\.gradle$
\.plist$
\.pbxproj$
\.xcprivacy$
\.proguard-rules\.pro$
gradle-wrapper\.jar$
gradlew$

# Exclude generated/template files
(^|/)templates(/|$)
\.html$
(^|/)coverage(/|$)
dependency-tree\.txt$

# Exclude test and development files
\.test\.
\.spec\.
\.integration\.
jest\.config\.
vite\.config\.

# Exclude Go and infrastructure files that may contain random strings
\.go$
\.tf$
\.tfvars$
\.tfstate$
\.tfstate\.backup$

# Exclude log files and temporary files
\.log$
\.tmp$
\.bak$
\.backup$
\.swp$
\.swo$

# Exclude development scripts and documentation
(^|/)scripts(/|$)
(^|/)docs(/|$)
(^|/)tools(/|$)
\.md$
\.txt$
\.sh$
\.bat$
\.ps1$

# Exclude IDE and editor files
\.vscode$
\.idea$
\.editorconfig$
\.prettierrc$
\.eslintrc$
\.gitignore$
\.dockerignore$

# Additional performance optimizations - exclude large/generated files
(^|/)\.git/objects(/|$)
(^|/)\.git/hooks(/|$)
(^|/)\.git/logs(/|$)
\.pack$
\.idx$
(^|/)android/app/build(/|$)
(^|/)android/app/src/androidTest(/|$)
(^|/)android/app/src/test(/|$)
(^|/)ios/Pods(/|$)
(^|/)ios/build(/|$)
\.aar$
\.apk$
\.ipa$
\.dSYM$
\.framework$
(^|/)frontend/node_modules/.pnpm(/|$)
\.min\.js$
\.min\.css$
\.map$
\.lock$
(^|/)dist(/|$)
(^|/)build(/|$)
(^|/)out(/|$)
\.log$
\.cache$
\.tmp$
\.temp$
\.swp$
\.swo$
\.bak$
\.backup$
(^|/)coverage(/|$)
(^|/)test-results(/|$)
(^|/)playwright-report(/|$)