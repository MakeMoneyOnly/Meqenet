# TruffleHog exclude rules (RE2 regex)
# Exclude vendor/deps and generated artifacts
(^|/)node_modules(/|$)
(^|/)\.git(/|$)
(^|/)\.pnpm-store(/|$)
(^|/)dist(/|$)
(^|/)build(/|$)
(^|/)coverage(/|$)
(^|/)\.cache(/|$)
(^|/)\.vite(/|$)
(^|/)\.eslintcache$
(^|/)\.nx(/|$)
(^|/)\.ignored_prisma(/|$)
(^|/)\.scannerwork(/|$)
(^|/)\.DS_Store$
\.lock$
(^|/)pnpm-lock\.yaml$
(^|/)yarn\.lock$
(^|/)package-lock\.json$
(^|/)bom\.json$
(^|/)trufflehog_report\.json$
# Exclude binary/media
\.(png|jpg|jpeg|gif|webp|svg)$
