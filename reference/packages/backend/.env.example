# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Authentication
JWT_SECRET=change_this_to_a_secure_random_string
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/meqenet?schema=public"

# Redis (for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# Security
BCRYPT_SALT_ROUNDS=12

# External Services (placeholders for Ethiopian payment providers)
TELEBIRR_API_KEY=your_telebirr_api_key
TELEBIRR_API_SECRET=your_telebirr_api_secret
TELEBIRR_API_URL=https://api.telebirr.com/v1

# KYC Provider (if using Didit or similar)
KYC_PROVIDER_API_KEY=your_kyc_provider_api_key
KYC_PROVIDER_API_URL=https://api.kyc-provider.com/v1