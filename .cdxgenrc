{
  "type": "js",
  "includeCrypto": true,
  "noAtom": true,
  "noRecurse": true,
  "noBanner": true,
  "noReachable": true,
  "noUsages": true,
  "skipInstall": true,
  "exclude": [
    "**/node_modules/**",
    "**/build/**",
    "**/dist/**",
    "**/android/**",
    "**/ios/**",
    "tools/**",
    "governance/**",
    "reports/**",
    "**/.git/**",
    "**/.nx/**",
    "**/.next/**",
    "frontend/**",
    "backend/**",
    "**/coverage/**",
    "**/logs/**",
    "**/tmp/**",
    "**/temp/**",
    "**/cache/**",
    "**/.pnpm/**",
    "**/pnpm-lock.yaml",
    "**/yarn.lock",
    "**/package-lock.json",
    "**/*.tgz",
    "**/*.tar.gz"
  ],
  "include": [
    "package.json",
    "backend/services/*/package.json",
    "frontend/apps/*/package.json",
    "frontend/libs/*/package.json"
  ],
  "output": "reports/bom.json",
  "verbose": true
}
